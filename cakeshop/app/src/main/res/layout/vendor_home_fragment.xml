<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/canvas"
    tools:context=".VendorHomeFragment">


    <LinearLayout
        android:id="@+id/storeownerGroup"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblStoreOwner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Store Owner:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/storeOwner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Store Owner"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/storenameGroup"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblStoreName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Store Name:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Store Name"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addressGroup"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblStoreAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Address:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/storeAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Address"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contactGroup"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblStoreContact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Contact:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/storeContact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Contact"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>